/* Full-width background overlay */
.background-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%; /* Adjust this value to control how much of the image is covered */
    background: linear-gradient(to top, rgba(245, 222, 179, 0.5) 50%, /* Wheat color, more opaque at bottom */
    rgba(245, 222, 179, 0.3) 75%, /* Slightly more transparent in middle */
    rgba(245, 222, 179, 0.1) 100% /* Most transparent at top */
    );
}
/* Content overlay */
.content-overlay {
    position: absolute;
    bottom: 0;
    right: 10%; /* Change this from left: 10% to right: 10% */
    width: 50%; /* Reduce the width to prevent overflow */
    padding: 30px;
    color: white;
    z-index: 1;
    text-align: right; /* Align text to the right */
}

    /* Adjust the title alignment */
    .content-overlay h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        text-align: right; /* Ensure the title is right-aligned */
    }

    /* Adjust the button alignment */
    .content-overlay h5 {
        text-align: right; /* Align the button to the right */
    }

/* Adjust the button itself */
.button {
    display: inline-block;
    background: black;
    color: white;
    padding: 10px 20px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    float: right; /* Float the button to the right */
    clear: both; /* Ensure it clears other floated elements */
}

    .button:hover {
        background: linear-gradient(to right, #462820, #644028);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

/* Carousel control buttons */
.carousel-control-edge {
    width: 5%; /* Reduce width to move buttons closer to edge */
    opacity: 0.8; /* Make buttons slightly more visible */
}

.carousel-control-prev.carousel-control-edge {
    left: -5%; /* Move left button outside the carousel */
}

.carousel-control-next.carousel-control-edge {
    right: -5%; /* Move right button outside the carousel */
}

/* Add hover effect for better user experience */
.carousel-control-edge:hover {
    opacity: 1;
}

/* Ensure the carousel container allows for the buttons to be outside */
#onShowMoviesCarousel {
    overflow: visible;
}

/* Adjust for smaller screens */
@@media (max-width: 768px) {
    .carousel-control-edge {
        width: 10%; /* Slightly wider on small screens for easier tapping */
    }

    .carousel-control-prev.carousel-control-edge {
        left: -2%; /* Don't move as far on small screens */
    }

    .carousel-control-next.carousel-control-edge {
        right: -2%; /* Don't move as far on small screens */
    }
}
