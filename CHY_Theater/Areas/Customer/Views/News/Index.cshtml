@model IEnumerable<CHY_Theater_Models.News>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "活動";
}
@section Styles {
    <style>
        .event-container {
            padding-top: 100px; /* Adjust based on your navbar height */
        }

        .event-card {
            background-color: black;
            color: #fff;
            border: none;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
            transition: transform 0.3s;
            margin-bottom: 30px;
            cursor: pointer;
        }

            .event-card:hover {
                transform: translateY(-5px);
            }

        .event-title {
            color: #e90101;
        }

        .event-type {
            color: #ffc107;
        }

        .event-image-container {
            position: relative;
            width: 100%;
            padding-top: 100%; /* 480px / 720px = 0.6667 */
            overflow: hidden;
        }

        .event-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }


        .breadcrumb {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 10px 15px;
            border-radius: 5px;
        }

        .breadcrumb-item a {
            color: #e90101;
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: #fff;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            color: #fff;
        }

        .breadcrumb-container {
            position: relative;
            margin-bottom: 20px;
            height: 400px; /* Adjust this value to increase/decrease the height */
            overflow: hidden; /* This ensures the background doesn't overflow */
        }

        .breadcrumb {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px 15px;
            border-radius: 5px;
            position: absolute;
            /*  bottom: 120px; */ /* Position the breadcrumb at the bottom */
            left: 20px; /* Add some left padding */
            right: 20px; /* Add some right padding */
            z-index: 1;
        }

        .breadcrumb-bg {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: url('/img/test2.jpg');
            background-size: cover;
            background-position: center;
            z-index: 0;
        }
    </style>
}
<div class="container event-container">
    <nav aria-label="breadcrumb" class="mt-3 breadcrumb-container">
        <div class="breadcrumb-bg"></div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page">影城</li>
        </ol>
    </nav>
    <h2 class="text-white mb-4">最新消息</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card event-card" onclick="location.href='@Url.Action("Details", "News", new { id = item.NewsId })'">
                    <div class="event-image-container">
                        <img src="@item.NewsPoster" class="event-image" alt="@item.NewsType">
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 event-type">@item.NewsType</h6>
                        <h5 class="card-title event-title">@item.NewsTitle</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>