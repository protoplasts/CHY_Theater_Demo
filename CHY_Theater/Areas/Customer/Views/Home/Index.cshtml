@section Styles {
    <style>
        /* Style for custom nav-tabs */
        .custom-nav-tabs {
            border-bottom: 2px solid #ddd; /* Adjust the border color as needed */
        }

        /* Style for custom nav-item */
        .custom-nav-item {
            margin-bottom: -1px; /* Aligns the tabs with the content */
        }

        /* Style for custom nav-link */
        .custom-nav-link {
            color: #4CAF50; /* Tab text color */
            background-color: #f8f9fa; /* Tab background color */
            border: 1px solid transparent;
            border-top-left-radius: 0.25rem;
            border-top-right-radius: 0.25rem;
            padding: 10px 20px; /* Adjust padding as needed */
            transition: color 0.3s ease, background-color 0.3s ease;
        }

        /* Active state for custom nav-link */
        .custom-nav-tabs .nav-item.show .custom-nav-link,
        .custom-nav-tabs .custom-nav-link.active {
            color: aquamarine; /* Active tab text color */
            background-color: darkslateblue; /* Active tab background color */
            border-color: none !important; /* Adjust border colors as needed */
        }

        /* Hover state for custom nav-link */
        .custom-nav-link:hover {
            color: #9CCC65; /* Tab text color on hover */
            background-color: #e9ecef; /* Tab background color on hover */
            border-color: #dee2e6 #dee2e6 #fff; /* Adjust border colors as needed */
        }

    </style>
}

