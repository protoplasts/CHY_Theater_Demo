@model IEnumerable<CHY_Theater_Models.Models.Theater>

@{
    ViewData["Title"] = "Theaters"; Layout = "~/Views/Shared/_Layout.cshtml";

}
Styles{
<style>
    .theater-container {
        padding-top: 100px; /* Adjust based on your navbar height */
    }

    .theater-card {
        height: 100%;
        transition: transform 0.3s;
    }

        .theater-card:hover {
            transform: scale(1.05);
        }

        .theater-card .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .theater-card .card-body {
            display: flex;
            flex-direction: column;
        }

        .theater-card .btn {
            margin-top: auto;
        }

    .breadcrumb {
        background-color: rgba(255, 255, 255, 0.1);
        padding: 10px 15px;
        border-radius: 5px;
    }

    .breadcrumb-item a {
        color: #e90101;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #fff;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        color: #fff;
    }
</style>
}
<div class="container theater-container">
    <nav aria-label="breadcrumb" class="mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page">影城</li>
        </ol>
    </nav>

    <h1 class="text-white mb-4">影城列表</h1>

    <div class="row">
        @foreach (var theater in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card bg-dark text-white theater-card">
                    @if (!string.IsNullOrEmpty(theater.TheaterImage))
                    {
                        <img src="@theater.TheaterImage" class="card-img-top" alt="@theater.TheaterName">
                    }
                    else
                    {
                        <img src="~/img/no_image_available.jpg" class="card-img-top" alt="Default Theater Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@theater.TheaterName</h5>
                        <p class="card-text">@theater.TheaterLocation</p>
                        <p class="card-text"><small class="text-muted">營業時間: @theater.TheaterStartTime.ToString("HH:mm") - @theater.TheaterEndTime.ToString("HH:mm")</small></p>
                        <a href="@Url.Action("Details", "Theaters", new { id = theater.TheaterId })" class="btn btn-danger">查看詳情</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>