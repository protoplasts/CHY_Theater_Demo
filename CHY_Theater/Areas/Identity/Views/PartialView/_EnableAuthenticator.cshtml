@model TwoFactorAuthenticationViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h3>啟用雙重驗證</h3>
                </div>
                <div class="card-body">
                    <form id="enableAuthenticator" method="post">
                        <div class="text-center mb-4">
                            <p>請在您的驗證器應用程式中輸入以下代碼：</p>
                            <h4 class="font-weight-bold text-success">@Model.Token</h4>
                            <p class="mt-3">或者，使用您的手機掃描下方的 QR 碼：</p>
                            <div id="qrCode" class="d-inline-block border p-2 rounded"></div>
                        </div>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Code" class="font-weight-bold">驗證碼</label>
                            <input asp-for="Code" class="form-control" placeholder="請輸入驗證碼" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-4">
                            <button class="btn btn-success btn-block" type="submit">
                                確認啟用
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/qrcode.js"></script>
<script type="text/javascript">
    new QRCode(document.getElementById("qrCode"), "@Model.QRCodeUrl");
</script>