@model List<UserCoupon>
@{
    ViewData["Title"] = "我的優惠券";
    Layout = "_MemberCenterLayout";

    // Group coupons by status
    var availableCoupons = Model.Where(c => !c.IsUsed && c.ExpiredAt >= DateTime.Now).ToList();
    var usedCoupons = Model.Where(c => c.IsUsed).ToList();
    var expiredCoupons = Model.Where(c => !c.IsUsed && c.ExpiredAt < DateTime.Now).ToList();
}

@section Styles {
    <style>
        .card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 10px;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
            }

        .badge {
            font-size: 0.8rem;
            padding: 0.5em 0.7em;
        }

        .bg-success {
            background-color: #28a745 !important;
        }

        .bg-secondary {
            background-color: #6c757d !important;
        }

        .bg-danger {
            background-color: #dc3545 !important;
        }

        .bg-primary {
            background-color: #007bff !important;
        }
    </style>
}

<div class="col-md-9">
    <h2 class="mb-4 mt-5">@ViewData["Title"]</h2>

    <!-- Tabs for navigation -->
    <ul class="nav nav-tabs" id="couponTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="available-tab" data-bs-toggle="tab" href="#available" role="tab">可使用</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="used-tab" data-bs-toggle="tab" href="#used" role="tab">已使用</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="expired-tab" data-bs-toggle="tab" href="#expired" role="tab">已逾期</a>
        </li>
    </ul>

    <div class="tab-content mt-3" id="couponTabContent">
        <!-- Available Coupons -->
        <div class="tab-pane fade show active" id="available" role="tabpanel">
            <div class="row">
                @if (availableCoupons.Any())
                {
                    @foreach (var userCoupon in availableCoupons)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-text flex-grow-1">
                                        @userCoupon.Coupon.Description
                                        @if (userCoupon.Coupon.DiscountType == "FixedAmount")
                                        {
                                            <span class="badge bg-danger">固定金額優惠</span>
                                        }
                                        else if (userCoupon.Coupon.DiscountType == "Percentage")
                                        {
                                            <span class="badge bg-primary">百分比優惠</span>
                                        }
                                    </h6>
                                    <p class="card-text"><strong>折扣：</strong>@("八折優惠")</p>
                                    @if (@userCoupon.Coupon.MinimumPurchaseAmount == 0)
                                    {
                                        <p class="card-text"><strong>金額限制：</strong>無限制</p>
                                    }
                                    else
                                    {
                                        <p class="card-text"><strong>金額限制：</strong> 訂單金額須滿 @userCoupon.Coupon.MinimumPurchaseAmount 元</p>
                                    }                                    <p class="card-text"><strong>有效期限：</strong> @userCoupon.ExpiredAt.ToString("yyyy-MM-dd")</p>
                                    <span class="badge bg-success">可使用</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">您目前沒有可使用的優惠券。</div>
                    </div>
                }
            </div>
        </div>

        <!-- Used Coupons -->
        <div class="tab-pane fade" id="used" role="tabpanel">
            <div class="row">
                @if (usedCoupons.Any())
                {
                    @foreach (var userCoupon in usedCoupons)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm bg-light">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-text flex-grow-1">
                                        @userCoupon.Coupon.Description
                                        @if (userCoupon.Coupon.DiscountType == "FixedAmount")
                                        {
                                            <span class="badge bg-danger">固定金額優惠</span>
                                        }
                                        else if (userCoupon.Coupon.DiscountType == "Percentage")
                                        {
                                            <span class="badge bg-primary">百分比優惠</span>
                                        }
                                    </h6>
                                    <p class="card-text"><strong>折扣：</strong>@("八折優惠")</p>
                                    @if (@userCoupon.Coupon.MinimumPurchaseAmount == 0)
                                    {
                                        <p class="card-text"><strong>金額限制：</strong>無限制</p>
                                    }
                                    else
                                    {
                                        <p class="card-text"><strong>金額限制：</strong> 訂單金額須滿 @userCoupon.Coupon.MinimumPurchaseAmount 元</p>
                                    }

                                    <p class="card-text"><strong>有效期限：</strong> @userCoupon.ExpiredAt.ToString("yyyy-MM-dd")</p>
                                    <span class="badge bg-secondary">已使用</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">您目前沒有已使用的優惠券。</div>
                    </div>
                }
            </div>
        </div>

        <!-- Expired Coupons -->
        <div class="tab-pane fade" id="expired" role="tabpanel">
            <div class="row">
                @if (expiredCoupons.Any())
                {
                    @foreach (var userCoupon in expiredCoupons)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm bg-light">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-text flex-grow-1">
                                        @userCoupon.Coupon.Description
                                        @if (userCoupon.Coupon.DiscountType == "FixedAmount")
                                        {
                                            <span class="badge bg-danger">固定金額優惠</span>
                                        }
                                        else if (userCoupon.Coupon.DiscountType == "Percentage")
                                        {
                                            <span class="badge bg-primary">百分比優惠</span>
                                        }
                                    </h6>
                                    <p class="card-text"><strong>折扣：</strong>@("八折優惠")</p>
                                    <p class="card-text"><strong>金額限制：</strong> @userCoupon.Coupon.MinimumPurchaseAmount</p>
                                    <p class="card-text"><strong>有效期限：</strong> @userCoupon.Coupon.ExpiryDate.ToString("yyyy-MM-dd")</p>
                                    <span class="badge bg-danger">已逾期</span>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-info" role="alert">您目前沒有已逾期的優惠券。</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
