@model List<BookingViewModel>
@{
    ViewData["Title"] = "訂單查詢";
}

<div class="container-xl mt-5">
    <div class="row">
        <!-- Left Navigation Bar -->
        <div class="col-md-3">
            <div class="list-group">
                <a href="@Url.Action("Index", "MemberCenter")" class="list-group-item list-group-item-action">我的帳戶</a>
                <a href="#" class="list-group-item list-group-item-action">更新個人資訊</a>
                <a href="#" class="list-group-item list-group-item-action">更改密碼</a>
                <a href="@Url.Action("OrderInquiry", "MemberCenter")" class="list-group-item list-group-item-action active">訂單查詢</a>
                <!-- ... other navigation items ... -->
            </div>
        </div>

        <!-- Right Content Area -->
        <div class="col-md-9">
            <h2>訂單查詢</h2>
            @foreach (var booking in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">訂單編號: @booking.MerchantTradeNo</h5>
                        <p class="card-text">
                            <strong>訂單日期:</strong> @booking.BookingDate.ToString("yyyy/MM/dd HH:mm")<br />
                            <strong>電影:</strong> @booking.MovieTitle<br />
                            <strong>影城:</strong> @booking.TheaterName<br />
                            <strong>影廳:</strong> @booking.AuditoriumName<br />
                            <strong>放映時間:</strong> @booking.ShowTime.ToString("yyyy/MM/dd HH:mm")<br />
                            <strong>座位:</strong> @string.Join(", ", booking.SeatDetails)<br />
                            <strong>票種:</strong> @string.Join(", ", booking.TicketTypes)<br />
                            @if (booking.Snacks.Any())
                            {
                                <strong>小吃:</strong> @string.Join(", ", booking.Snacks)

                                <br />
                            }
                            <strong>總金額:</strong> NT$ @booking.TotalAmount<br />
                            <strong>付款方式:</strong> @booking.PaymentTypes

                            <strong>訂單狀態:</strong> @booking.BookingStatus
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>