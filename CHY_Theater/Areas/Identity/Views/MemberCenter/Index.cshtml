<div class="container-xl mt-5">
    <div class="row">
        <!-- Left Navigation Bar -->
        <div class="col-md-3">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">我的帳戶</a>
                <a href="#" class="list-group-item list-group-item-action">更新個人資訊</a>
                <a href="#" class="list-group-item list-group-item-action">更改密碼</a>
                <a href="@Url.Action("OrderInquiry", "MemberCenter")" class="list-group-item list-group-item-action active">訂單查詢</a>
                <a href="#" class="list-group-item list-group-item-action">收件地址管理</a>
                <a href="#" class="list-group-item list-group-item-action">專屬優惠券</a>
                <a href="#" class="list-group-item list-group-item-action">紅利點數</a>
                <a href="#" class="list-group-item list-group-item-action">收藏清單</a>
                <a href="#" class="list-group-item list-group-item-action">詢問紀錄</a>
            </div>
        </div>

        <!-- Right Content Area -->
        <div class="col-md-9">
            <h2>會員中心</h2>
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">個人資訊</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">用戶名稱:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>

                        <dt class="col-sm-3">電子郵件:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">電子郵件已驗證:</dt>
                        <dd class="col-sm-9">@(Model.EmailConfirmed ? "是" : "否")</dd>

                        <dt class="col-sm-3">電話號碼:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <!-- Add any additional properties specific to your ApplicationUser here -->
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>