@model VerifyAuthenticatorViewModel
@section Styles {
    <style>
    .VerifyAuthenticator-container {
            padding-top: 100px; /* Adjust based on your navbar height */
            
        }
	</style>
}
<div class="VerifyAuthenticator-container mb-3 ">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">驗證雙重認證碼</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="VerifyAuthenticatorCode"
                          asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <input asp-for="RememberMe" type="hidden" />

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Code" class="font-weight-bold">驗證碼</label>
                            <input asp-for="Code" class="form-control" placeholder="請輸入驗證碼" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberClient" type="checkbox" class="custom-control-input" id="rememberClient">
                                <label class="custom-control-label" for="rememberClient">記住此裝置</label>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button class="btn btn-success btn-block" type="submit">
                                確認驗證
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}