@model RegisterViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signinManager

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.0.0/mdb.min.css" rel="stylesheet" />

<section class="background-radial-gradient overflow-hidden">
    <style>
        .background-radial-gradient {
            background-color: hsl(218, 41%, 15%);
            background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
        }

        #radius-shape-1 {
            height: 220px;
            width: 220px;
            top: -60px;
            left: -130px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        #radius-shape-2 {
            border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
            bottom: -60px;
            right: -110px;
            width: 300px;
            height: 300px;
            background: radial-gradient(#44006b, #ad1fff);
            overflow: hidden;
        }

        .bg-glass {
            background-color: hsla(0, 0%, 100%, 0.9) !important;
            backdrop-filter: saturate(200%) blur(25px);
        }

        /*   .form-outline .form-control {
                    border: 1px solid #ced4da; /* Or any color you prefer */
        }
        */
    </style>

    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                    Create your account <br />
                    <span style="color: hsl(218, 81%, 75%)">and join our community</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                    Register now to access all features and become a part of our growing network.
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                    <div class="card-body px-4 py-5 px-md-5">
                        <form method="post" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline" data-mdb-input-init>
                                        <input asp-for="Name" id="form3Example1" class="form-control" />
                                        <label asp-for="Name" class="form-label" for="form3Example1">Name</label>
                                    </div>
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>



                            </div>

                            <div class="form-outline mb-4" data-mdb-input-init>
                                <input asp-for="Email" id="form3Example2" class="form-control" />
                                <label asp-for="Email" class="form-label" for="form3Example3">Email address</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4" data-mdb-input-init>
                                <input asp-for="Password" id="form3Example4" class="form-control" />
                                <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4" data-mdb-input-init>
                                <input asp-for="ConfirmPassword" id="form3Example5" class="form-control" />
                                <label asp-for="ConfirmPassword" class="form-label" for="form3Example5">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            @* //form-select與form-outline在MDB不能通用會相衝我讓AI 生成的程式把兩個混用了 *@
                            <div class="col-md-6 mb-4">
                                <label asp-for="RoleSelected" class="form-label">Role</label>

                                <select asp-for="RoleSelected" asp-items="@Model.RoleList" class="form-select">
                                    <option disabled selected>--Select Role--</option>
                                </select>



                                <span asp-validation-for="RoleSelected" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-info">
                                    @Html.Raw(ViewBag.Message)
                                </div>
                            }

                            @*  <div class="text-center">
                            <p>or sign up with:</p>
                            @{
                            var schemes = await signinManager.GetExternalAuthenticationSchemesAsync();
                            var loginProviders = schemes.ToList();
                            }
                            @foreach (var provider in loginProviders)
                            {
                            <button type="submit" class="btn btn-link btn-floating mx-1" name="provider" value="@provider.Name">
                            <i class="fab fa-@provider.Name.ToLower()"></i>
                            </button>
                            }
                            </div> *@
                        </form>
                        @{
                            var schemes = await signinManager.GetExternalAuthenticationSchemesAsync();
                            var loginProviders = schemes.ToList();
                        }

                        @if (loginProviders.Count() > 0)
                        {
                            <div class="text-center">
                                <hr />
                                <section>
                                    <p>or sign up with:</p>
                                    <form asp-controller="Account" asp-action="ExternalLogin"
                                          asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">

                                        <div>
                                            <p>
                                                @foreach (var provider in loginProviders)
                                                {
                                                    <button type="submit" class="btn btn-primary" name="provider"
                                                            value="@provider.Name">
                                                        <i class="fab fa-@provider.Name.ToLower()"></i>
                                                        @provider.Name
                                                    </button>
                                                }
                                            </p>
                                        </div>

                                    </form>
                                </section>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.0.0/mdb.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();
                $.ajax({
                    url: this.action,
                    type: this.method,
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {
                            Swal.fire({
                                title: 'Registration Successful!',
                                html: result.message,
                                icon: 'success',
                                confirmButtonText: 'OK'
                            });
                        } else {
                            // Handle validation errors or other issues
                            // You might need to modify this part based on how you're returning validation errors
                            Swal.fire({
                                title: 'Registration Failed',
                                text: 'Please check the form and try again.',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Error',
                            text: 'An error occurred while processing your request.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}